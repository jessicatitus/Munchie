<div class='callout'>
  <h1>New Restaurant Form</h1>
  <%= form_for(@restaurant, html: { class: 'form'}) do |f| %>

    <% if @restaurant.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h4>

        <ul>
          <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_area :address %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_area :city %>
    </div>

    <div class="field">
      <%= f.label :state %>
      <%= f.text_area :state %>
    </div>

    <div class="field">
      <%= f.label :zip %>
      <%= f.text_area :zip %>
    </div>

    <div class="field">
      <%= f.label :img_url %>
      <%= f.text_area :img_url %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <div class='backbutton'>
    <%= link_to 'Back', restaurants_path %>
  </div>
</div>
